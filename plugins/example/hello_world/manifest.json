{
  "name": "hello_world",
  "display_name": "Hello World Plugin",
  "category": "example",
  "version": "1.0.0",
  "description": "A simple Hello World plugin demonstrating Nexus Framework capabilities",
  "author": {
    "name": "Nexus Team",
    "email": "hello@nexus-framework.dev",
    "url": "https://nexus-framework.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/nexus-framework/hello-world-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexus-framework/hello-world-plugin.git"
  },
  "documentation": "https://docs.nexus-framework.dev/plugins/hello-world",
  "keywords": [
    "example",
    "hello-world",
    "tutorial",
    "greetings",
    "messages"
  ],
  "icon": "ðŸ‘‹",
  "screenshots": [
    "screenshots/greeting.png",
    "screenshots/messages.png",
    "screenshots/stats.png"
  ],
  "dependencies": {
    "nexus": ">=1.0.0",
    "python": ">=3.11",
    "packages": [
      "pydantic>=2.0.0",
      "fastapi>=0.100.0"
    ],
    "plugins": [],
    "system": []
  },
  "permissions": [
    "database.read",
    "database.write",
    "events.publish",
    "events.subscribe",
    "api.register"
  ],
  "configuration": {
    "schema": {
      "type": "object",
      "properties": {
        "max_message_length": {
          "type": "integer",
          "default": 500,
          "minimum": 10,
          "maximum": 5000,
          "description": "Maximum length for messages"
        },
        "enable_notifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable notification events"
        },
        "default_language": {
          "type": "string",
          "default": "en",
          "enum": ["en", "es", "fr", "de", "it", "pt", "ja", "zh", "ru", "ar"],
          "description": "Default greeting language"
        },
        "rate_limit": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "integer",
              "default": 100,
              "description": "Number of requests allowed"
            },
            "period": {
              "type": "integer",
              "default": 60,
              "description": "Time period in seconds"
            }
          }
        }
      }
    },
    "required": [],
    "optional": [
      "max_message_length",
      "enable_notifications",
      "default_language",
      "rate_limit"
    ]
  },
  "api": {
    "prefix": "/api/example/hello_world",
    "version": "v1",
    "endpoints": [
      {
        "path": "/",
        "method": "GET",
        "description": "Get plugin information"
      },
      {
        "path": "/greet",
        "method": "GET",
        "description": "Greet someone in their preferred language"
      },
      {
        "path": "/greet",
        "method": "POST",
        "description": "Greet someone using POST method"
      },
      {
        "path": "/languages",
        "method": "GET",
        "description": "List available greeting languages"
      },
      {
        "path": "/languages/{code}",
        "method": "POST",
        "description": "Add a new language greeting"
      },
      {
        "path": "/messages",
        "method": "GET",
        "description": "List all messages"
      },
      {
        "path": "/messages",
        "method": "POST",
        "description": "Create a new message"
      },
      {
        "path": "/messages/{id}/like",
        "method": "POST",
        "description": "Like a message"
      },
      {
        "path": "/stats",
        "method": "GET",
        "description": "Get plugin statistics"
      },
      {
        "path": "/health",
        "method": "GET",
        "description": "Check plugin health"
      }
    ]
  },
  "events": {
    "publishes": [
      {
        "name": "hello_world.initialized",
        "description": "Plugin has been initialized"
      },
      {
        "name": "hello_world.shutdown",
        "description": "Plugin is shutting down"
      },
      {
        "name": "hello_world.greeting",
        "description": "Someone was greeted"
      },
      {
        "name": "hello_world.message_created",
        "description": "A new message was created"
      },
      {
        "name": "hello_world.message_liked",
        "description": "A message was liked"
      }
    ],
    "subscribes": [
      {
        "name": "user.created",
        "description": "Handle new user creation"
      },
      {
        "name": "system.shutdown",
        "description": "Handle system shutdown"
      }
    ]
  },
  "ui": {
    "enabled": false,
    "menu": {
      "title": "Hello World",
      "icon": "ðŸ‘‹",
      "position": 100,
      "parent": "Examples"
    },
    "dashboard_widgets": [
      {
        "id": "hello_stats",
        "title": "Hello World Statistics",
        "size": "small",
        "position": 1
      }
    ]
  },
  "features": {
    "hot_reload": true,
    "background_tasks": false,
    "websocket": false,
    "graphql": false,
    "caching": true
  },
  "compatibility": {
    "min_nexus_version": "1.0.0",
    "max_nexus_version": "2.0.0",
    "platforms": ["linux", "darwin", "win32"]
  },
  "health_check": {
    "endpoint": "/health",
    "interval": 60,
    "timeout": 5,
    "checks": [
      {
        "name": "database",
        "critical": true
      },
      {
        "name": "messages",
        "critical": false
      }
    ]
  },
  "metrics": [
    {
      "name": "greetings_total",
      "type": "counter",
      "description": "Total number of greetings"
    },
    {
      "name": "messages_total",
      "type": "counter",
      "description": "Total number of messages"
    },
    {
      "name": "languages_supported",
      "type": "gauge",
      "description": "Number of supported languages"
    }
  ],
  "changelog": {
    "1.0.0": {
      "date": "2024-01-01",
      "changes": [
        "Initial release",
        "Basic greeting functionality",
        "Message board feature",
        "Multi-language support",
        "Event integration",
        "Health checks and metrics"
      ]
    }
  }
}
