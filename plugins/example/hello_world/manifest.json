{
  "name": "hello_world",
  "version": "1.0.0",
  "description": "A simple Hello World plugin demonstrating Nexus Framework capabilities",
  "author": "Nexus Team",
  "category": "example",
  "dependencies": {},
  "permissions": [
    "database.read",
    "database.write",
    "events.publish",
    "events.subscribe",
    "api.register"
  ],
  "entry_point": "create_plugin",
  "main": "plugin.py",
  "config": {
    "max_message_length": 500,
    "enable_notifications": true,
    "default_language": "en",
    "rate_limit": {
      "requests": 100,
      "period": 60
    }
  }
}
