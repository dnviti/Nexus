{
  "name": "template_plugin",
  "display_name": "Template Plugin",
  "version": "1.0.0",
  "description": "A template plugin demonstrating best practices for Nexus Framework plugin development",
  "author": "Your Name",
  "email": "your.email@example.com",
  "license": "MIT",
  "category": "example",
  "tags": [
    "template",
    "example",
    "starter",
    "boilerplate"
  ],
  "repository": "https://github.com/yourusername/nexus-template-plugin",
  "homepage": "https://your-plugin-website.com",
  "documentation": "https://your-plugin-docs.com",
  "dependencies": {
    "nexus_framework": ">=2.0.0",
    "plugins": [],
    "python": ">=3.11",
    "packages": []
  },
  "permissions": [
    "database.read",
    "database.write",
    "events.publish",
    "events.subscribe",
    "api.register_routes",
    "cache.read",
    "cache.write"
  ],
  "api": {
    "prefix": "/api/template_plugin",
    "version": "v1",
    "endpoints": [
      {
        "path": "/",
        "methods": ["GET"],
        "description": "Get plugin information",
        "auth_required": false
      },
      {
        "path": "/health",
        "methods": ["GET"],
        "description": "Health check endpoint",
        "auth_required": false
      },
      {
        "path": "/items",
        "methods": ["GET", "POST"],
        "description": "List and create items",
        "auth_required": true
      },
      {
        "path": "/items/{item_id}",
        "methods": ["GET", "PUT", "DELETE"],
        "description": "Get, update, or delete a specific item",
        "auth_required": true
      },
      {
        "path": "/stats",
        "methods": ["GET"],
        "description": "Get plugin statistics",
        "auth_required": false
      }
    ]
  },
  "events": {
    "publishes": [
      {
        "name": "template_plugin.initialized",
        "description": "Plugin has been initialized"
      },
      {
        "name": "template_plugin.shutdown",
        "description": "Plugin is shutting down"
      },
      {
        "name": "template_plugin.item_created",
        "description": "A new item has been created"
      },
      {
        "name": "template_plugin.item_updated",
        "description": "An item has been updated"
      },
      {
        "name": "template_plugin.item_deleted",
        "description": "An item has been deleted"
      }
    ],
    "subscribes": [
      {
        "name": "user.created",
        "description": "Responds to new user creation"
      },
      {
        "name": "system.maintenance",
        "description": "Prepares for system maintenance"
      }
    ]
  },
  "configuration": {
    "schema": {
      "enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable or disable the plugin"
      },
      "max_items": {
        "type": "integer",
        "default": 1000,
        "min": 10,
        "max": 10000,
        "description": "Maximum number of items allowed"
      },
      "cache_ttl": {
        "type": "integer",
        "default": 300,
        "min": 0,
        "max": 3600,
        "description": "Cache time-to-live in seconds"
      },
      "enable_notifications": {
        "type": "boolean",
        "default": true,
        "description": "Enable notification features"
      },
      "api_rate_limit": {
        "type": "integer",
        "default": 100,
        "min": 10,
        "max": 1000,
        "description": "API rate limit per minute"
      },
      "custom_setting": {
        "type": "string",
        "default": "default_value",
        "description": "A custom configuration setting"
      },
      "require_database": {
        "type": "boolean",
        "default": false,
        "description": "Whether database service is required"
      }
    }
  },
  "database": {
    "required": false,
    "tables": [
      {
        "name": "template_items",
        "description": "Items managed by the template plugin"
      }
    ],
    "indexes": [
      "template_items.name",
      "template_items.created_at"
    ]
  },
  "assets": {
    "static": [],
    "templates": []
  },
  "hooks": {
    "install": null,
    "uninstall": null,
    "update": null,
    "health_check": null
  },
  "metrics": {
    "enabled": false,
    "endpoints": [
      {
        "name": "template_plugin_items_total",
        "type": "counter",
        "description": "Total number of items"
      },
      {
        "name": "template_plugin_api_requests",
        "type": "counter",
        "description": "Number of API requests"
      }
    ]
  },
  "i18n": {
    "supported_languages": ["en"],
    "default_language": "en"
  },
  "compatibility": {
    "min_framework_version": "2.0.0",
    "max_framework_version": null,
    "tested_versions": [
      "2.0.0"
    ],
    "breaking_changes": [],
    "python_versions": ["3.11", "3.12"]
  },
  "support": {
    "documentation": "https://docs.example.com/template-plugin",
    "issues": "https://github.com/yourusername/nexus-template-plugin/issues",
    "email": "support@example.com",
    "discord": "https://discord.gg/your-discord"
  },
  "changelog": {
    "1.0.0": {
      "date": "2024-01-01",
      "changes": [
        "Initial release",
        "Basic CRUD operations for items",
        "Event publishing and subscription",
        "Health check endpoint"
      ]
    }
  }
}
